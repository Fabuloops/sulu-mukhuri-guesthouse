<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}{% endblock %}

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/assets/css/lib/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/css/custom/mukhuri.css" />

        {% block style %}{% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="text-center">
                {% block header %}
                    <a href="{{ sulu_content_root_path() }}">
                        <img id="logo" src="/assets/img/logo.png" alt="logo">
                    </a>
                    <nav>
                        <ul class="nav">
                            <li class="nav-item">
                                <a  class="nav-link {{ template is defined and 'homepage' == template ? 'active' }}"
                                    href="{{ sulu_content_root_path() }}">Accueil</a>
                            </li>

                            {% for item in sulu_navigation_root_tree('main') %}
                                <li class="nav-item">
                                    <a  class="nav-link {{ uuid == item.uuid ? 'active' }}"
                                        href="{{ sulu_content_path(item.url) }}"
                                        title="{{ item.title }}">{{ item.title }}</a>
                                </li>
                            {% endfor %}

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{ request.locale }}</a>
                                <div class="dropdown-menu">
                                    {% for key, value in urls if key != request.locale %}
                                        {% set itemUrl = sulu_content_path(value, request.webspaceKey, key)|default('') %}
                                        {% if itemUrl is not empty %}
                                            <a class="dropdown-item" href="{{ itemUrl }}">{{ key }}</a>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </li>

                        </ul>
                    </nav>
                {% endblock %}
            </header>

            {#<form action="{{ path('sulu_search.website_search') }}" method="GET">
                <input name="q" type="text" placeholder="Search" />
                <input type="submit" value="Go" />
            </form>#}

            {#<section id="content" vocab="http://schema.org/" typeof="Content">
                {% block content %}{% endblock %}
            </section>#}

            <div id="content" vocab="http://schema.org/" typeof="Content">
                {% block content %}{% endblock %}
            </div>

            {#<aside>
                {% block aside %}{% endblock %}
            </aside>#}

            <footer>
                {% block footer %}
                    <p>Copyright {{ 'now'|date('Y') }} SULU</p>
                {% endblock %}
            </footer>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="/assets/js/lib/jquery-3.2.1.slim.min.js"></script>
        <script src="/assets/js/lib/popper.min.js"></script>
        <script src="/assets/js/lib/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
