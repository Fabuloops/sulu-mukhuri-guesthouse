<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>templates/homepage</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="fr">Accueil</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="fr">Titre</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="fr">URL</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <property name="presentation" type="text_editor">
            <meta>
                <title lang="en">Presentation</title>
                <title lang="de">Pr√©sentation</title>
            </meta>
        </property>

        <!--<property name="home-caroussel" type="imageGallery" mandatory="true">
            <meta>
                <title lang="en">Image Gallery</title>
                <title lang="fr">Galerie d'image</title>
            </meta>
        </property>-->

    </properties>
</template>
